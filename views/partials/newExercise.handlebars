<div class="container">
  <form action="/api/exercises" method="post">
    <h3 class="text-center">New Exercise</h3>
    <div class="form-row mt-4">
      <div class="form-group col-12">
        <label for="name">Name</label>
        <input type="text" class="form-control" name="name">
      </div>
      <div class="form-group col-6">
        <label for="type">Type</label>
        <input type="text" class="form-control" name="type">
      </div>
      <div class="form-group col-6">
        <label for="weight">Weight</label>
        <div class="input-group">
          <input type="number" class="form-control" name="weight">
          <div class="input-group-append">
            <span class="input-group-text">lbs</span>
          </div>
        </div>
      </div>
      <div class="form-group col-6">
        <label for="sets">Sets</label>
        <input type="number" class="form-control" name="sets">
      </div>
      <div class="form-group col-6">
        <label for="reps">Reps</label>
        <input type="number" class="form-control" name="reps">
      </div>
      <div class="form-group col-6">
        <label for="duration">Duration</label>
        <div class="input-group">
          <input type="number" class="form-control" name="duration">
          <div class="input-group-append">
            <span class="input-group-text">min</span>
          </div>
        </div>
      </div>
      <div class="form-group col-6">
        <label for="distance">Distance</label>
        <div class="input-group">
          <input type="number" class="form-control col-10" name="distance">
          <div class="input-group-append">
            <span class="input-group-text">mi.</span>
          </div>
        </div>
      </div>
    </div>
    <button type="submit" class="btn btn-primary btn-lg">Save</button>
  </form>
</div>